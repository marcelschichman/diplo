{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "isShellCommand": true,
    "args": ["-c"],
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "debug",
            "isBuildCommand": false,
            "args": [
                "cmake -DCMAKE_BUILD_TYPE=Debug ."
            ]
        },
        {
            "taskName": "release",
            "isBuildCommand": false,
            "args": [
                "cmake -DCMAKE_BUILD_TYPE=Release ."
            ]
        },
        {
            "taskName": "build",
            "isBuildCommand": true,
            "args": [
                "make"
            ]
        }
    ]
}